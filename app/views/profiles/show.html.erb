<p id="notice"><%= notice %></p>

<% if user_signed_in? && current_user.profile == @profile %>
  <div class="pull-right">
    <%= link_to(raw("<span class='glyphicon glyphicon-pencil' aria-hidden='true'></span> Edit"), edit_profile_path(@profile), class: "btn btn-default btn-xs") %>
  </div>
<% end %>

<h1>Profile</h1>

<p>
  <strong>Name:</strong><br/>
  <%= @profile.name %>
</p>

<p>
  <strong>Birthdate:</strong><br/>
  <%= @profile.birthdate %>
</p>

<p>
  <strong>Avatar:</strong><br/>
  <%= image_tag @profile.avatar.to_s, width: "50", height: "50" if @profile.avatar.present?  %>
</p>