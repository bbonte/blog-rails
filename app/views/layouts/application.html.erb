<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-default">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
              data-target="#navbar-collapsed" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">The&nbsp;Blog</a>
    </div>
    <div class="collapse navbar-collapse" id="navbar-collapsed">
      <% if user_signed_in? %>
          <%= link_to('Log out', destroy_user_session_path, :method => :delete, :class => "btn btn-default navbar-btn navbar-right") %>
      <% else %>
          <%= link_to('Log in', new_user_session_path, :class => "btn btn-default navbar-btn navbar-right") %>
      <% end %>
    </div>
  </div>
</nav>

<div class="container">

  <p> <%= "User signed in: " + user_signed_in?.to_s %> </p>

  <% if user_signed_in? %>
      Username: <%= current_user %>
  <% end %>

  <%# <h1> link_to("BLOG", { :controller => 'home', :action => 'index' }) </h1>%>

  <!-- Messages for Devise authentication  -->
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

  <!-- CONTENT -->
  <%= yield %>

</div>

</body>
</html>
