<p id="notice"><%= notice %></p>

<% if user_signed_in? %>
  <%= link_to 'New Post', new_post_path, class: "btn btn-success pull-right" %>
<% end %>
<h1>Blog Posts</h1>

<% if @posts.empty? %>
  <p>There are currently no blog posts.</p>
<% end %>

<% @posts.each do |post| %>
<hr>
  <h2><%= link_to post.title.to_s, post %></h2>
  <p><strong>Publisher: </strong><%= post.profile.name %></p>
  <p><strong>Publishing date: </strong><%= post.created_at.strftime("%d %B %Y") %></p>

  <p>
    <%= post.avatar %>
    <%= post.content %>
  </p>

  <% if user_signed_in? %>
    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    <%= link_to 'Edit', edit_post_path(post) %>

    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
    <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>

<% end %>